<!DOCTYPE html>
<html lang="en">
<head>
    {{> head}}
    <link rel="stylesheet" href="/css/product-table.css"/>
    <title>Користувачі</title>
</head>
<body>
    {{> adminHeader}}
    <main>
        <div class="container">
            <div class="justify-content-center">
				<div class="text-center">
					<h1 class="display-3 col-sm-12">Користувачі</h1>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="mb-2">
                            <a href="/users/create" class="btn btn-success">Додати користувача</a>
                        </div>
                        {{#if users}}
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Ім'я</th>
                                    <th>Прізвище</th>
                                    <th>E-mail</th>
                                    <th>Телефон</th>
                                    <th>Змінити</th>
                                    <th>Видалити</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                    <tr>
                                        <td>{{this.firstName}}</td>
                                        <td>{{this.lastName}}</td>
                                        <td>{{this.email}}</td>
                                        <td>{{this.phone}}</td>
                                        <td>
                                            <a href="/users/update/{{this._id}}" class="btn btn-success text-white p-1">
                                                <i class="material-icons">edit</i>
                                            </a> 
                                        </td>
                                        <td>
                                            <form action="/users/delete" method="POST">
                                                <input type="hidden" name="id" value="{{this._id}}"/>
                                                <button type="submit" class="btn btn-danger text-white p-1">
                                                    <i class="material-icons">delete</i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        {{else}}
                        <div class="alert alert-secondary text-center" role="alert">
                            Нема користувачів
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </main>
    {{> footer}}
</body>
</html>